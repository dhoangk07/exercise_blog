<div class="container">
  <div class="row">
    <div class="col-sm-12 col-sm-offset-12">
      <div class="light-well">
        <h2 class="page-header text-center edit">Edit <%=@user.first_name %><%=@user.first_name %></h2>

        <%= form_for @user, html: { multipart: true }, html: { class: "form-horizontal center"} do |f| %>

          <div class="form-group">
            <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "Please Enter Your First Name" %>
          </div>

          <div class="form-group">
            <%= f.text_field :last_name, autofocus: true, class: "form-control", placeholder: "Please Enter Your Last Name" %>
          </div>

          <div class="form-group">
            <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Please Enter Your Email"  %>
          </div>

          <div class="form-group">
            <%= f.file_field :image, autofocus: true, class: "form-control", placeholder: "Please Input Your Profile"  %>
          </div>

          <div class="actions">
            <%= f.submit "Update", class: "btn btn-success btn-lg btn-block" %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>