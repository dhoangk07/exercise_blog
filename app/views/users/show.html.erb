  <div class="row">
    <div class="image">
      <img src="/assets/1.jpg" alt="San Francisco" width="200" height="200" class="rounded-circle">
    </div>
  </div>
  <div>
    <nav aria-label="breadcrumb">
      <span for="exampleInputEmail1">Email address</span>
