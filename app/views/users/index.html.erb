<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="sample" align="center"> Listing all Users</h1>
      <div class="row offset-3">
      <p align="center"><%= will_paginate @user, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %></p>
  </div>
      
        <table class="table table-hover">
          <thead>
            <tr>
              <th>No.</th>
              <th>F.Name</th>
              <th>L.Name</th>
              <th>Email</th>
              <th>Profile</th>
              <th>Role</th>
              <th>Sign In Count</th>
              <th>Newspapers Count</th>
              <th>Comments Count</th>
              <th>Edit Profile</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each_with_index do |user,index| %>
              <tr>
                <td><%= index +1 %></td>
                <td><%= user.first_name %></td>
                <td><%= user.last_name %></td>
                <td><%= user.email %><br/>
                  
                </td>

                <td><%= gravatar_for user %><br/>
                
                <% if user.role == "admin" %>
                  <td><%= link_to "Admin", users_path(filter: "admin") %> </td>
                  <td><%= user.sign_in_count %></td>
                  <td><%= Newspaper.all.where(user_id: user.id).count %></td>
                  <td><%= Comment.all.where(user_id: user.id).count %></td>
                  </td>
                    <td><%= link_to 'Show', user_path(user), class: "badge badge-pill badge-success badge-user" %><br/>
                    <%= link_to "Edit", edit_user_registration_path(user), class: "badge badge-pill badge-success badge-user"%><br/>
                    <%= link_to "Destroy", user_path(user),
                      method: :delete,
                      data: { confirm: "Are you sure? "}, class: "badge badge-pill badge-success badge-user" %>
                  </td>  
                <% else %>
                  <td><%= user.role.capitalize %></td>
                  <td><%= user.sign_in_count %></td>
                  <td><%= Comment.all.where(user_id: params[:user_id]).count %></td>

                  <td><% if Comment.all.where(user_id: params[:user_id]).count == 0 %>
                    <%= "0" %>
                    <% end %>
                  </td>
                    <td><%= link_to 'Show', user_path(user), class: "badge badge-pill badge-success badge-user" %><br/>
                    <%= link_to "Edit", edit_user_registration_path(user), class: "badge badge-pill badge-success badge-user"%><br/>
                    <%= link_to "Destroy", user_path(user),
                      method: :delete,
                      data: { confirm: "Are you sure? "}, class: "badge badge-pill badge-success badge-user" %>
                  </td>  
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>


