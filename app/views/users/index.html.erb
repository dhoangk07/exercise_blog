<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="sample" align="center"> Listing all Users</h1>
      <div align="center">
        <div class="digg_pagination" >
          <%= will_paginate @users, :container => true %>
        </div>
      </div>
      
        <table class="table table-hover">
          <thead>
            <tr>
              <th>No.1</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Email</th>
              <th>Profile</th>
              <th>Role</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each_with_index do |user,index| %>
              <tr>
                <td><%= index +1 %></td>
                <td><%= user.first_name %></td>
                <td><%= user.last_name %></td>
                <td><%= user.email %><br/>
                  <small class="badge badge-pill badge-warning"><%= link_to 'Show', user_path(user) %></small>
                  <small class="badge badge-pill badge-warning"><%= link_to "Edit", edit_user_registration_path(user)%></small>
                  <small class="badge badge-pill badge-warning"><%= link_to "Destroy", user_path(user),
                        method: :delete,
                        data: { confirm: "Are you sure? "} %></small>
                </td>

                <td><%= gravatar_for user %><br/>
                
                <% if user.role == "admin" %>
                  <td><%= link_to "Admin", users_path(filter: "admin") %> </td>
                <% else %>
                  <td><%= user.role %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      <div align="center">
        <div class="digg_pagination" >
          <%= will_paginate @users, :container => true %>
        </div>
      </div>
    </div>
  </div>
</div>


