<% if !@newspaper.errors.any? %>
  $('#body-of-newspaper-<%=(@newspaper.id)-1%>').prepend("<%= j(render 'action', newspaper: @newspaper) %>");
  $('.close').click();
  $('#title-newspaper').val('');
  $('#content-newspaper').val('');
  $('#newspaper_tag_list').val('');
<% else %>
  $('#error-message').prepend("<%= j(render 'newspapers/message_validate', newspaper: @newspaper) %>");
  $('#error-message').fadeOut( 4000 );
  // $('#error-message-validate').remove();
<% end %>



