<div class="container">
  <h3 align="center" class="add"> Listing all Newspaper </h3>

  <%= link_to "Add New Newspaper", new_newspaper_path %> 

  <table class="table table-hover">
    <thead>
      <tr>
        <th>No.</th>
        <th>Title</th>
        <th>Content</th>
      </tr>
    </thead>
    <tbody>
      <% @newspapers.each_with_index do |newspaper,index| %>
      <tr>
        <td><%= index +1 %></td>
        <td><%= newspaper.title %></td>
        <td><%= newspaper.content %></td>
        <td><%= link_to 'Show', newspaper_path(newspaper) %></td>
        <td><%= link_to "Edit", edit_newspaper_path(newspaper)%></td>
        <td><%= link_to "Destroy", newspaper_path(newspaper),
        method: :delete,
        data: { confirm: "Are you sure? "} %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
