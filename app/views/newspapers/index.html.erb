<div class="row">

  <!-- Blog Entries Column -->
  <div class="col-md-7" >
    <div class="row">
      <h1 class="my-4-title col-md-8" id="blog-title">Hoang's Blog
        <small>Newspaper</small> 
      </h1>
      <span class="col-md-2 float-right ">
        <span class="row">
          <%= render 'modal' %>
          <%= render 'icon_sort' %>
        </span>
      </span> 
      
    </div>
    <div class="searching">
      <%= render 'search', newspapers: @newspapers %>
    </div>
    <!-- Pagination -->
  </div>
  

  <!-- Sidebar Widgets Column -->
  <div class="col-md-4 my-4-title">
    <!-- Search Widget -->
    <%= render 'search_widget' %>
     <!-- Categories Widget -->
    <div class="card my-4">
      <h5 class="card-header">Categories</h5>
      <div class="card-body">
            <% if @tags.present? %>
              <% @tags.each do |tag| %>
                <span class="list-unstyled mb-0">
                    <button type="button" class="btn btn-outline-primary btn-sm btn-tag"><%= link_to tag.name, newspapers_path(filter_tag: tag.id) %></button>
                </span>
              <% end %>
            <% end %>
      </div>
    </div>
  </div>
</div>
