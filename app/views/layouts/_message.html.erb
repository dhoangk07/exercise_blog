<div class="container">
  <div class='row'>
    <div align="center" class='col-sm-8 offset-2'>
      <% flash.each do |name, msg| %>
      <div class='alert alert-<%="#{name}"%>'>
        <a href='#' class='close' date-dismiss='alert'>&#215;</a>
        <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
      </div>
      <% end %>
    </div>
  </div>
</div>